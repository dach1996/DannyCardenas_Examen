<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DannyCardenas_Examen.MainPage">

    <ContentPage.Content>
        <Grid>
           
            <BoxView Color="AliceBlue" Opacity="0.8"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />

                </Grid.RowDefinitions>
        

                <StackLayout Grid.Row="1" Padding="30,20">
                    <Image Source="https://uisrael.edu.ec/wp-content/uploads/2020/03/Logo-Uisrael-formal-2@2x.png" Aspect="AspectFill" />
                    <Entry x:Name="txtUsuario" Placeholder="Correo electronico" PlaceholderColor="White" />
                    <Entry x:Name="txtPassword" Placeholder="Contraseña" PlaceholderColor="White" IsPassword="True" />
                    <Button Text="Iniciar Sesión"  BorderRadius="20" TextColor="Black" />
              
                </StackLayout>

           

            </Grid>


        </Grid>
    </ContentPage.Content>
</ContentPage>
